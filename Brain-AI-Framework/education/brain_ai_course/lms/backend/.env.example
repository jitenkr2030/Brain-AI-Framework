# Brain AI LMS Backend Environment Variables
# Copy this file to .env and update the values for your environment

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL Connection (asyncpg format for SQLAlchemy)
DATABASE_URL=postgresql+asyncpg://brain_ai:brain_ai_secret@localhost:5432/brain_lms_db

# Alternative: Standard psycopg2 format
# DATABASE_URL=postgresql://brain_ai:brain_ai_secret@localhost:5432/brain_lms_db

# ============================================
# JWT & SECURITY
# ============================================
# IMPORTANT: Change this in production!
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# STRIPE PAYMENT PROCESSING
# ============================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# AWS S3 CONFIGURATION (Optional)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name
AWS_ENDPOINT_URL=https://s3.amazonaws.com

# ============================================
# REDIS CACHE (Optional)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# APPLICATION SETTINGS
# ============================================
DEBUG=true
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@brainai.com

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# ============================================
# BRAIN AI FRAMEWORK INTEGRATION
# ============================================
BRAIN_AI_API_URL=http://localhost:8000/api/v1
BRAIN_AI_TIMEOUT=30
