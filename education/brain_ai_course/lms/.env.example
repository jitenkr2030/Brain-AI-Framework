# Brain AI LMS Environment Variables Example
# Copy this file to .env and fill in your values

# ==============================================================================
# Database Configuration
# ==============================================================================
DATABASE_URL=postgresql://brain_ai_user:brain_ai_secure_password@postgres:5432/brain_ai_lms
POSTGRES_DB=brain_ai_lms
POSTGRES_USER=brain_ai_user
POSTGRES_PASSWORD=brain_ai_secure_password
POSTGRES_HOST=postgres

# ==============================================================================
# Redis Configuration (Optional - for caching and sessions)
# ==============================================================================
REDIS_URL=redis://redis:6379/0

# ==============================================================================
# Application Configuration
# ==============================================================================
APP_ENV=development
DEBUG=true
SECRET_KEY=brain-ai-lms-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================================================
# Brain AI Framework Integration
# ==============================================================================
BRAIN_AI_API_URL=http://brain-ai-service:8001
BRAIN_AI_API_KEY=brain-ai-api-key-for-internal-communication

# ==============================================================================
# Frontend Configuration
# ==============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Brain AI LMS
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ==============================================================================
# File Upload Configuration
# ==============================================================================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=mp4,mov,avi,pdf,zip,jpg,jpeg,png

# ==============================================================================
# Email Configuration (SMTP)
# ==============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@brain-ai-lms.com

# ==============================================================================
# Payment Configuration (Stripe)
# ==============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==============================================================================
# Security Configuration
# ==============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_PER_MINUTE=100
JWT_ALGORITHM=HS256

# ==============================================================================
# Logging Configuration
# ==============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==============================================================================
# Development Tools
# ==============================================================================
ADMIN_EMAIL=admin@brain-ai-lms.com
ADMIN_PASSWORD=admin123  # Change immediately in production
SEED_DATA=true
