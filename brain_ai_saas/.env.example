# Brain AI SaaS Environment Configuration
# Copy this file to .env and update the values

# Application
APP_NAME=Brain AI SaaS
DEBUG=true
VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:brain_ai_password_2025@localhost:5432/brain_ai_saas
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=brain_ai_saas
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20

# Redis Configuration
REDIS_URL=redis://:your_redis_password@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Security
SECRET_KEY=your_super_secret_key_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Vector Database (Pinecone)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=10

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true

# External APIs
OPENAI_API_KEY=your_openai_api_key_here

# Feature Flags
ENABLE_VECTOR_SEARCH=false
ENABLE_LEARNING=true
ENABLE_ANALYTICS=true

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","https://brain-ai.com","https://app.brain-ai.com"]
